<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroceriesActivity">


    <View
        android:id="@+id/rectangle_6"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle" />

    <ImageView
        android:id="@+id/passimage"
        android:layout_width="191dp"
        android:layout_height="181dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/apple2" />

    <ImageButton
        android:id="@+id/backfr"
        android:layout_width="10dp"
        android:layout_height="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/back" />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/share" />

    <TextView
        android:id="@+id/nameclicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="305dp"
        android:fontFamily="@font/internormal"
        android:text="Name"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/favourite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="335dp"
        android:fontFamily="@font/gilroyregular"
        android:text="1 Kg, Prices"
        android:textFontWeight="600"
        android:textSize="16dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="5dp">

        <ImageButton
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/greenbtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/gilroybold"
            android:text="Add To The Basket"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </RelativeLayout>




</RelativeLayout>